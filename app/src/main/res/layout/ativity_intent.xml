<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <Button
        android:id="@+id/btn_map_launch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="intentLaunch"
        android:text="Launch MAP"
        android:layout_above="@+id/btn_store_launch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/btn_store_launch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="intentLaunch"
        android:text="Launch Google Play"
        android:layout_above="@+id/btn_email_launch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/btn_email_launch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="intentLaunch"
        android:text="Launch Email client"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btn_store_launch"
        android:layout_alignEnd="@+id/btn_store_launch"/>

    <Button
        android:id="@+id/sendImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="intentLaunch"
        android:text="Send Image"
        android:layout_below="@+id/btn_email_launch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btn_email_launch"
        android:layout_alignEnd="@+id/btn_email_launch"/>

    <Button
        android:id="@+id/sendImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="intentLaunch"
        android:text="Send Images"
        android:layout_below="@+id/sendImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/sendImage"
        android:layout_alignEnd="@+id/sendImage"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>